version = "0.1"
description = "ocanren"
requires = "GT,unix"
archive(byte) = "MiniKanren.cma"
archive(native) = "MiniKanren.cmxa"

package "distrib" (
  requires(ppx_driver) = "base
                          base.caml
                          compiler-libs.common
                          ppx_core
                          ppx_driver
                          GT.expander
                          "

  archive(ppx_driver,byte)   = "ppx_distrib.cma"
  archive(ppx_driver,native) = "ppx_distrib.cmxa"
  plugin(ppx_driver,byte)    = "ppx_distrib.cma"
  plugin(ppx_driver,native)  = "ppx_distrib.cmxs"

  # This is what jbuilder uses to find out the runtime dependencies of
  # a preprocessor
  ppx_runtime_deps = "GT.expander"

  # This line makes things transparent for people mixing preprocessors
  # and normal dependencies
  requires(-ppx_driver) = ""
)

package "noinjected" (
  requires(ppx_driver) = "base
                          base.caml
                          compiler-libs.common
                          ppx_core
                          ppx_driver
                          "
# TODO
)

package "ppx" (
  description = "PPX syntax extensionon top of ppx_deriving"
  #requires(-ppx_driver) = "ppx_deriving"
  ppx = "./ppx_ocanren_all.native --as-ppx"
  #requires(ppx_driver) = "ppx_deriving.api"
  archive(ppx_driver, byte) = "ppx_ocanren_all.cma"
  archive(ppx_driver, native) = "ppx_ocanren_all.cmxa"
  exists_if = "ppx_ocanren_all.cmxs"
)
package "repr" (
  description = ""
  requires(-ppx_driver) = "ppx_deriving"
  ppxopt(-ppx_driver,-custom_ppx) = "ppx_deriving,-deriving-plugin,./ppx_ocanren_all.cma"
  requires(ppx_driver) = "ppx_deriving.api"
  #archive(ppx_driver, byte) = "ppx_ocanren_all.cma"
  #archive(ppx_driver, native) = "ppx_ocanren_all.cmxa"
  exists_if = "ppx_ocanren_all.cmxs"
)
package "syntax" (
  description="Camlp5 syntax extension"
  requires="camlp5"
  archive(syntax,preprocessor) = "pa_minikanren.cmo"
  archive(syntax,toploop)      = "pa_minikanren.cmo"
)
